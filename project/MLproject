name: gojob

conda_env: conda.yaml

entry_points:
  main:
    command: "python main.py"
  train:
    parameters:
      alpha: { type: float, default: 0.5 }
      l1_ratio: { type: float, default: 0.1 }
    command: "python train.py {alpha} {l1_ratio}"
  process_data:
    parameters:
      path:
        {
          type: str,
          default: "/home/chrysostome/Desktop/gojob/data/wine-quality.csv",
        }
      version: { type: str, default: "v3" }
    command: "python process_data.py {path} {version}"
  env:
    command: "python set_env.py"
